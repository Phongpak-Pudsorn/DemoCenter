<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_trin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_imgPro"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_img_pro"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="@color/black_jang"
                    android:text="Edit"
                    android:textSize="15sp"
                    android:textColor="@color/white">

                </TextView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/grey_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Test"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_idx_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="ID"
                    android:textColor="@color/grey_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_idx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXX"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/baseline_monetization_on_24"
                    android:drawablePadding="5dp"
                    android:gravity="start|center"
                    android:text="888"
                    android:textColor="@color/black_light"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_topup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/baseline_payment_24"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="Topup"
                    android:textColor="@color/black_light"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="5dp"
                android:gravity="start|center"
                android:text="E-mail : "
                android:textColor="@color/black_light"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_editProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/baseline_settings_accessibility_24"
                android:drawablePadding="5dp"
                android:gravity="start|center"
                android:text="Account Management"
                android:textColor="@color/black_light"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:drawablePadding="5dp"
            android:text="Logout"
            android:textColor="@color/black_light"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>